{
  "name": "lab-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun react-router dev",
    "build": "react-router build",
    "start": "bunx --bun react-router-serve ./build/server/index.js",
    "typecheck": "bunx --bun react-router typegen && tsc",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules",
    "reset": "rimraf node_modules",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "spa-start": "npm run build && python ./spa_serve.py",
    "spa-docker-build": "npm run build && docker build -t app:latest -f Dockerfile.spa .",
    "spa-docker-start": "docker run --rm -p 8080:80 --name app app:latest"
  },
  "dependencies": {
    "@react-router/fs-routes": "^7.5.0",
    "@react-router/node": "^7.5.0",
    "@react-router/serve": "^7.5.0",
    "@tailwindcss/vite": "^4.1.4",
    "isbot": "^5.1.26",
    "justd-icons": "^1.10.27",
    "motion": "^12.7.2",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-aria": "^3.39.0",
    "react-aria-components": "^1.8.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0",
    "tailwindcss": "^4.1.4",
    "tailwindcss-react-aria-components": "^2.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.6",
    "@eslint/js": "^9.24.0",
    "@react-router/dev": "^7.5.0",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/experimental-addon-test": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@storybook/test": "8.6.12",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "biome": "^0.3.3",
    "clsx": "^2.1.1",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "storybook": "8.6.12",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "overrides": {
    "react-is": "^19.0.0"
  }
}
